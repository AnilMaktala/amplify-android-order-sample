<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/topRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/button_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Records"

            />

        <Button
            android:id="@+id/button_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Orders"
            android:visibility="visible"

            />
        <Button
            android:id="@+id/button_displayOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Display Orders"
            android:visibility="visible"
            />

        <Button
            android:id="@+id/button_clearDataStore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear DataStore"
            android:visibility="visible"
            />

        <Button
            android:id="@+id/button_totalOrders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Orders"
            android:visibility="visible"
            />

    </LinearLayout>
